{
    "name": "react-starter",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@emotion/react": "^11.9.0",
        "@emotion/styled": "^11.8.1",
        "@mui/icons-material": "^5.8.0",
        "@mui/material": "^5.8.0",
        "@mui/styled-engine-sc": "^5.8.0",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.2.0",
        "@testing-library/user-event": "^13.5.0",
        "autoprefixer": "^10.4.7",
        "bootstrap": "^5.1.3",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-router-dom": "^6.3.0",
        "react-scripts": "5.0.1",
        "sass": "^1.51.0",
        "styled-components": "^5.3.5",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "prettier": "prettier --ignore-path .gitignore \"**/*.+(ts|tsx|js|jsx|json|css|md|mdx|html)\"",
        "format": "npm run prettier -- --write",
        "check-format": "npm run prettier -- --list-different",
        "lint": "eslint --ignore-path .gitignore \"**/*.+(js|jsx)\"",
        "validate": "npm-run-all --parallel lint check-format",
        "prepare": "husky install",
        "lint:css": "stylelint --ignore-path .gitignore --fix \"**/*.css\""
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.0",
        "@commitlint/config-conventional": "^17.0.0",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-react": "^7.29.4",
        "husky": "^8.0.1",
        "lint-staged": "^12.4.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.2",
        "stylelint": "^14.8.2",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-standard": "^25.0.0"
    },
    "lint-staged": {
        "**/*.+(js|jsx)": [
            "eslint"
        ],
        "**/*.+(ts|tsx|js|jsx|json|css|md|mdx|html)": [
            "prettier --write",
            "git add"
        ],
        "**/*.+(css | scss)": [
            "stylelint --fix"
        ]
    }
}
